                <Button Content="Default parameters" Margin="406,0,17,0" Height="25" Foreground="Black" Background="#FFCC00FF" FontSize="15" FontWeight="Normal" FontStyle="Italic"/>
            </GroupBox>
            <TextBox TextWrapping="NoWrap" Foreground="#FFCC00FF" SelectionTextBrush="White" Margin="209,455,0,201" Background="{x:Null}" Width="67" HorizontalAlignment="Left" RenderTransformOrigin="0.389,-0.42"/>
            <Label Content="ρ: " Margin="182,451,0,0" Width="22" Foreground="#FFCC00FF" HorizontalAlignment="Left" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" VerticalAlignment="Top" FlowDirection="LeftToRight" Height="40"/>
            <TextBox TextWrapping="NoWrap" Foreground="#FFCC00FF" SelectionTextBrush="White" Margin="209,403,0,253" Background="{x:Null}" Width="67" HorizontalAlignment="Left" RenderTransformOrigin="0.561,-0.827"/>
            <Label Content="T:" Margin="182,399,0,253" Width="22" Foreground="#FFCC00FF" HorizontalAlignment="Left" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"/>
            <TextBox TextWrapping="NoWrap" Foreground="#FFCC00FF" SelectionTextBrush="White" Margin="209,354,0,302" Background="{x:Null}" Width="67" HorizontalAlignment="Left" RenderTransformOrigin="0.561,-0.827"/>
            <Label Content="P:" Margin="182,350,0,302" Width="22" Foreground="#FFCC00FF" HorizontalAlignment="Left" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"/>
            <TextBox TextWrapping="NoWrap" Foreground="#FFCC00FF" SelectionTextBrush="White" Margin="487,435,0,221" Background="{x:Null}" Width="67" HorizontalAlignment="Left" RenderTransformOrigin="0.561,-0.827"/>
            <Label Content="θ: " Margin="460,433,0,219" Width="22" Foreground="#FFCC00FF" HorizontalAlignment="Left" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"/>
            <TextBox TextWrapping="NoWrap" Foreground="#FFCC00FF" SelectionTextBrush="White" Margin="487,375,0,281" Background="{x:Null}" Width="67" HorizontalAlignment="Left" RenderTransformOrigin="0.561,-0.827"/>
            <Label Content="E:" Margin="460,373,0,279" Width="22" Foreground="#FFCC00FF" HorizontalAlignment="Left" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" RenderTransformOrigin="0.482,-0.747"/>
            <TextBox TextWrapping="NoWrap" Foreground="#FFCC00FF" SelectionTextBrush="White" Margin="348,455,0,201" Background="{x:Null}" Width="67" HorizontalAlignment="Left" RenderTransformOrigin="0.389,-0.42"/>
            <Label Content="ɣ: " Margin="321,451,0,185" Width="22" Foreground="#FFCC00FF" HorizontalAlignment="Left" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"/>
            <TextBox TextWrapping="NoWrap" Foreground="#FFCC00FF" SelectionTextBrush="White" Margin="348,403,0,253" Background="{x:Null}" Width="67" HorizontalAlignment="Left" RenderTransformOrigin="0.561,-0.827"/>
            <Label Content="R:" Margin="321,399,0,253" Width="22" Foreground="#FFCC00FF" HorizontalAlignment="Left" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"/>
            <TextBox TextWrapping="NoWrap" Foreground="#FFCC00FF" SelectionTextBrush="White" Margin="348,354,0,302" Background="{x:Null}" Width="67" HorizontalAlignment="Left" RenderTransformOrigin="0.561,-0.827"/>
            <Label Content="M:" Margin="321,350,0,302" Width="22" Foreground="#FFCC00FF" HorizontalAlignment="Left" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"/>
            <Button Content="Restart simulation" Margin="242,586,128,65" Foreground="Black" Background="#FFCC00FF" FontSize="15" FontWeight="Normal" FontStyle="Normal"/>
            <Button Content="Save simulation" Margin="436,586,224,65" Foreground="Black" Background="#FFCC00FF" FontSize="15" FontWeight="Normal" FontStyle="Normal" IsCancel="True" Grid.ColumnSpan="2"/>
            <Button Content="Open simulation" Margin="55,586,35,65" Foreground="Black" Background="#FFCC00FF" FontSize="15" FontWeight="Normal" FontStyle="Normal" Grid.Column="1"/>

        </Grid>
        <Button Content="Calculate simulation" Margin="55,588,600,-179" Foreground="Black" Background="#FFCC00FF" FontSize="15" FontWeight="Normal" FontStyle="Normal"/>



    </Grid>
</Window>
