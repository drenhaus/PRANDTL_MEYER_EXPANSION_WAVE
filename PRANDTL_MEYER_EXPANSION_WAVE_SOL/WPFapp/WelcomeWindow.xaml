<Window x:Class="WPFapp.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="WelcomeWindow" Height="450" Width="690"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="#FF2D2D30"
            CornerRadius="20">
        <Grid>

            <Label Content="Welcome to the simulation!" 
               Margin="0,10,0,0" FontSize="50" 
               FontWeight="Thin" 
               Foreground="AliceBlue" 
               HorizontalAlignment="Center" Height="101" VerticalAlignment="Top"/>

            <Button x:Name="StarButton" Content="Start" 
                Margin="109,163,0,0" 
                Width="200" 
                Height="66" 
                FontSize="30"
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" Click="StarButton_Click"
                    Style="{DynamicResource RoundCorner}"
                    Foreground="White"/>

            <Button x:Name="ExitButton" Content="Exit" 
                Margin="394,163,0,221" 
                Width="200"               
                Click="Button_Click"                   
                    FontSize="30"
                    Style="{DynamicResource RoundCorner}"
                    Foreground="White" HorizontalAlignment="Left"/>

            <Button x:Name="TutorialButton" Content="Tutorial" 
            Margin="394,295,0,89" 
            Width="200" 
            FontWeight="Bold" 
            FontSize="30" 
            Click="Button_Click"
                    Style="{DynamicResource RoundCorner}"
                    Foreground="White" HorizontalAlignment="Left"/>
            <Button Content="" 
                    HorizontalAlignment="Left" 
                    Height="3" Margin="0,108,0,0" 
                    VerticalAlignment="Top" Width="702"
                    Background="White"/>

        </Grid>

    </Border>

</Window>
