<Window x:Class="WPFapp.AdvancedStudyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="AdvancedStudyWindow" Height="813" Width="1320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="403*"/>
            <RowDefinition Height="394*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Advanced_GridMalla_CASO1" 
              HorizontalAlignment="Left" 
              Width="547" Margin="29,21,0,0" 
              Height="336" 
              VerticalAlignment="Top"
              />

        <Grid x:Name="Advanced_GridMalla_2_CASO1" 
            HorizontalAlignment="Left" 
            Width="464" Margin="426,38,0,0" 
            Height="315" 
            VerticalAlignment="Top"
            />


        <Grid x:Name="Advanced_GridMalla_CASO2" 
            HorizontalAlignment="Left" 
            Width="547" Margin="10,0,0,0" 
            Height="357" 
            VerticalAlignment="Center" Grid.Row="1"
            />

        <Grid x:Name="Advanced_GridMalla_2_CASO2" 
            HorizontalAlignment="Left" 
            Width="464" Margin="557,19,0,0" 
            Height="360" 
            VerticalAlignment="Top" Grid.Row="1"
            />



        <DataGrid x:Name="Advanced_DataGridMalla" 
                  Margin="1082,0,0,0" 
                  ItemsSource="{Binding}" 
                    AutoGenerateColumns="True" HorizontalAlignment="Left" Width="212" Height="220" VerticalAlignment="Center"/>

        <DataGrid x:Name="Advanced_DataGridMalla_2" 
                  Margin="0,0,26,156" 
                  ItemsSource="{Binding}" 
                    AutoGenerateColumns="True" RenderTransformOrigin="0.61,-0.682" Grid.Row="1" Height="185" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="192"/>
        <Button x:Name="AdvStudyExplication_Button" Content="Explication of A.S" 
                HorizontalAlignment="Left" 
                Margin="1128,20,0,0" 
                VerticalAlignment="Top" 
                Height="32" Width="120"/>

        <Button x:Name="Close_Button" 
                Content="x" 
                HorizontalAlignment="Left" 
                Margin="857,10,0,0" 
                VerticalAlignment="Top" Width="33" Height="20"/>

        <Button x:Name="Mini_Button" 
                Content="-" 
                HorizontalAlignment="Left" 
                Margin="814,10,0,0" 
                VerticalAlignment="Top" Width="34" Height="20"/>
        <ComboBox x:Name="DataGridComboBox_AS" 
                    HorizontalAlignment="Left" 
                    Margin="1138,272,0,0"
                    VerticalAlignment="Top" 
                    Width="120"                     
            SelectionChanged="DataGridComboBox_AS_SelectionChanged"
                      Style="{DynamicResource theComboBox}" 
                  ItemContainerStyle="{DynamicResource theComboBoxItem}" Grid.Row="1" Height="35">

            <ComboBoxItem Content="T"
                              FontFamily="/Fonts/#Poppins"
                              Background="AliceBlue"
                              HorizontalAlignment="Center"
                              FontSize="10"
                              Width="120"/>
            <ComboBoxItem Content="u"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="v"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="Rho"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="P" 
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="Mach"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>

        </ComboBox>

    </Grid>
</Window>
