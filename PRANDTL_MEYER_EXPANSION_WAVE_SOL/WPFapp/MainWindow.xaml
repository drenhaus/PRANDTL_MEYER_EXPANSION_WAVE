<Window x:Class="WPFapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="690" Width="980">
    <Grid x:Name="grid1" Margin="0,10,0,10" HorizontalAlignment="Center" Width="960">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="761*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="587*"/>
        </Grid.RowDefinitions>

        <Label Content="Simulation Window" 
               Margin="10,0,0,0"
               FontSize="30" 
               FontWeight="Bold" 
               Foreground="#FFCC00FF"
               HorizontalAlignment="Left" 
               Grid.ColumnSpan="2"
               Height="62" 
               VerticalAlignment="Center" 
               Width="374"/>
        <Button x:Name="WelcomeButton" Content="Back to start" 
                HorizontalAlignment="Right" 
                Margin="0,10,0,0" 
                Grid.Row="1" 
                VerticalAlignment="Top" 
                Height="38" Width="208" 
                RenderTransformOrigin="0.477,-0.345"/>

        <Button x:Name="TablesButton" Content="Tables" 
            HorizontalAlignment="Right" 
            Margin="0,53,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Height="38" Width="208" 
            RenderTransformOrigin="0.477,-0.345" Click="TablesButton_Click"/>

        <Button x:Name="ComparationButton" 
                Content="Comparar con el tete Anderson" 
            HorizontalAlignment="Right" 
            Margin="0,96,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Height="38" Width="208" 
            RenderTransformOrigin="0.477,-0.345" Click="ComparationButton_Click"/>

        <Button x:Name="GraficButton" 
            Content="Graficos" 
            HorizontalAlignment="Right" 
            Margin="0,139,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Height="38" Width="208" 
            RenderTransformOrigin="0.477,-0.345"/>
        <Button x:Name="AdvancedStudyButton" 
            Content="estudio avanzado" 
            HorizontalAlignment="Right" 
            Margin="0,182,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Height="38" Width="208" 
            RenderTransformOrigin="0.477,-0.345" Click="AdvancedStudyButton_Click"/>




        <Button x:Name="LoadPresitionButton" 
                Content="Select this presition" 
                HorizontalAlignment="Left" 
                Margin="31,54,0,0" 
                Grid.Row="1" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="118" 
                RenderTransformOrigin="0.477,-0.345"/>
        <Label Content="Seleciona precision" 
               HorizontalAlignment="Right"
               Margin="0,0,637,545" 
               Grid.Row="1" 
               VerticalAlignment="Bottom" 
               Width="114" 
               Grid.Column="1" Height="26"/>

        <ComboBox x:Name="PresitionComboBox" 
                  HorizontalAlignment="Left" 
                  Margin="128,15,0,0" 
                  Grid.Row="1" 
                  VerticalAlignment="Top" 
                  Width="107" 
                  Height="26" 
                  Grid.Column="1" RenderTransformOrigin="0.5,0.5">
            <ComboBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.51"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ComboBox.RenderTransform>
        </ComboBox>

        <Grid x:Name="GridMalla" 
              HorizontalAlignment="Left" 
              Width="703" Margin="31,215,0,0" 
              Height="362" 
              VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"
              />

        <Button x:Name="InfoPresitionButton" Content="I" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                Margin="207,53,0,0" 
                Grid.Row="1"
                VerticalAlignment="Top" 
                RenderTransformOrigin="-0.074,-0.171" 
                Height="24" Width="27"/>

        <Label Content="ρ:" 
               Grid.Column="1" 
               HorizontalAlignment="Left" 
               Margin="332,82,0,0" 
               Grid.Row="1" 
               VerticalAlignment="Top" RenderTransformOrigin="0.495,1.177" Height="26" Width="20"/>
        <Label Content="P:" 
               Grid.Column="1" 
               HorizontalAlignment="Left" 
               Margin="333,15,0,0" 
               Grid.Row="1" 
               VerticalAlignment="Top" RenderTransformOrigin="0.168,0.491" Height="26" Width="19"/>
        <Label Content="M:" 
               Grid.Column="1" 
               HorizontalAlignment="Left" 
               Margin="459,36,0,0" 
               Grid.Row="1" 
               VerticalAlignment="Top" RenderTransformOrigin="-0.426,-0.61" Height="26" Width="23"/>
        <Label Content="T:" 
               Grid.Column="1" 
               HorizontalAlignment="Left" 
               Margin="333,43,0,0" 
               Grid.Row="1" 
               VerticalAlignment="Top" Height="26" Width="19"/>
        <Label Content="v:" 
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Margin="462,78,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
               RenderTransformOrigin="-0.426,-0.61" Height="26" Width="18"/>



        <TextBox x:Name="P_TextBox" Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Margin="366,23,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="62" Height="18"/>


        <TextBox x:Name="M_TextBox" Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Margin="496,43,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="62" Height="18"/>

        <TextBox x:Name="Rho_TextBox" Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Margin="366,90,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="62" Height="18"/>

        <TextBox x:Name="v_TextBox" Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Margin="496,82,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="62" Height="18"/>

        <TextBox x:Name="T_TextBox" Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Margin="366,56,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="62" Height="18"/>



        <CheckBox x:Name="CheckBox_A" Content="Defaul parameters" 
                  Grid.Column="1" 
                  HorizontalAlignment="Left" 
                  Margin="580,25,0,0" 
                  Grid.Row="1" 
                  Checked="CheckBox_A_Checked"
                  VerticalAlignment="Top" Height="15" Width="135"
                  />




        <Button x:Name="LoadParametersButton" 
                Content="Load Parameters" 
                HorizontalAlignment="Left" 
                Margin="587,63,0,0" 
                Grid.Row="1" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="118" 
                RenderTransformOrigin="0.477,-0.345" Click="LoadParametersButton_Click"/>

        <Button x:Name="Simulate_Button" 
                Content="Star Simulation" 
                HorizontalAlignment="Right" 
                Margin="0,128,203,0" 
                Grid.Row="1" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="120" 
                RenderTransformOrigin="0.477,-0.345" Click="Simulate_Button_Click"/>

        <Button x:Name="SaveSim_button" 
                Content="Save Simulation" 
                HorizontalAlignment="Left" 
                Margin="31,115,0,0" 
                Grid.Row="1" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="118" 
                RenderTransformOrigin="0.477,-0.345"/>

        <Button x:Name="LoadSim_button" 
                Content="Load Simulation" 
                HorizontalAlignment="Left" 
                Margin="31,152,0,0" 
                Grid.Row="1" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="118" 
                RenderTransformOrigin="0.477,-0.345"/>

        <Button x:Name="Reset_button" 
                Content="Reset" 
                HorizontalAlignment="Left" 
                Margin="587,130,0,0" 
                Grid.Row="1" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="118" 
                RenderTransformOrigin="0.477,-0.345" Click="Reset_button_Click"/>

        <Button x:Name="Close_Button" 
                Content="x" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                Margin="658,19,0,0" 
                VerticalAlignment="Top" Width="33"/>

        <Button x:Name="Mini_Button" 
                Content="-" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                Margin="615,19,0,0" 
                VerticalAlignment="Top" Width="34"/>
        <Label Content="Select data type:" 
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Margin="447,162,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" RenderTransformOrigin="0.495,1.177" Height="26" Width="102"/>
        <ComboBox x:Name="DataGridComboBox" 
            HorizontalAlignment="Left" 
            Margin="585,166,0,0"
            VerticalAlignment="Top" 
            Width="120"
            IsEnabled="False"   
            SelectionChanged="DataGridComboBox_SelectionChanged"  Grid.Column="1" Grid.Row="1">

            <ComboBoxItem Content="T"/>
            <ComboBoxItem Content="u"/>
            <ComboBoxItem Content="v"/>
            <ComboBoxItem Content="Rho"/>
            <ComboBoxItem Content="P" />
            <ComboBoxItem Content="Mach"/>

        </ComboBox>






    </Grid>
</Window>
