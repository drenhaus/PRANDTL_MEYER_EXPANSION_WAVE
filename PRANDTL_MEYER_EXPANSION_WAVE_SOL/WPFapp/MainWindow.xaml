<Window x:Class="WPFapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="690" Width="980">
    <Grid x:Name="grid1" Loaded="Loaded" Margin="0,10,0,10" HorizontalAlignment="Center" Width="960">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="47*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="574*"/>
        </Grid.RowDefinitions>

        <Label Content="Simulation Window" 
               Margin="10,0,0,0"
               FontSize="30" 
               FontWeight="Bold" 
               Foreground="#FFCC00FF"
               HorizontalAlignment="Left" 
               Grid.ColumnSpan="2"
               Height="62" 
               VerticalAlignment="Center" 
               Width="374"/>
        <Button x:Name="InicioButton" Content="Inicio" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,0" 
                Grid.Row="1" 
                VerticalAlignment="Top" 
                Height="38" Width="208" 
                RenderTransformOrigin="0.477,-0.345"/>

        <Button x:Name="TablesButton" Content="Tables" 
            HorizontalAlignment="Center" 
            Margin="0,53,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Height="38" Width="208" 
            RenderTransformOrigin="0.477,-0.345"/>

        <Button x:Name="ComparationButton" 
                Content="Comparar con el tete Anderson" 
            HorizontalAlignment="Center" 
            Margin="0,96,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Height="38" Width="208" 
            RenderTransformOrigin="0.477,-0.345"/>

        <Button x:Name="GraficButton" 
            Content="Graficos" 
            HorizontalAlignment="Center" 
            Margin="0,139,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Height="38" Width="208" 
            RenderTransformOrigin="0.477,-0.345"/>
        <Button x:Name="AdvancedStudyButton" 
            Content="estuddio avanzado" 
            HorizontalAlignment="Center" 
            Margin="0,182,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Height="38" Width="208" 
            RenderTransformOrigin="0.477,-0.345"/>



    </Grid>
</Window>
