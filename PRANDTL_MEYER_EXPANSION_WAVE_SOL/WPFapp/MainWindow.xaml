<Window x:Class="WPFapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="690" Width="980"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseMove="Window_MouseMove">



    <Border Background="#272537"
            CornerRadius="20">
        <Grid x:Name="grid1" Margin="0,10,0,10" HorizontalAlignment="Center" Width="960">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="199*"/>
                <ColumnDefinition Width="761*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="69*"/>
                <RowDefinition Height="89*"/>
                <RowDefinition Height="512*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Simulation window"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="30"
                       FontFamily="/Fonts/#Poppins" 
                       Height="60" 
                       Margin="24,10,0,0" 
                       Width="299" Grid.ColumnSpan="2" Grid.RowSpan="2"/>


            <Button x:Name="WelcomeButton" 
                    Content="Back to start" 
                    Margin="-9,10,0,0" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Height="38" 
                    RenderTransformOrigin="0.477,-0.345"
                    FontFamily="/Fonts/#Poppins"     
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent" Click="WelcomeButton_Click"
                    />

            <Button x:Name="TablesButton" 
                    Content="Tables" 
                    Margin="-9,53,0,0" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Height="38" 
                    RenderTransformOrigin="0.477,-0.345" 
                    Click="TablesButton_Click"
                    FontFamily="/Fonts/#Poppins"     
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent" Grid.RowSpan="2"
                    />

            <Button x:Name="ComparationButton" 
                    Content="Compare with Anderson" 
                    Margin="-9,7,0,0" 
                    Grid.Row="2" 
                    VerticalAlignment="Top" 
                    Height="38" 
                    RenderTransformOrigin="0.477,-0.345" 
                    Click="ComparationButton_Click"
                    FontFamily="/Fonts/#Poppins"     
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent"/>

            <Button x:Name="GraficButton" 
                    Content="Graphics" 
                    Margin="-9,50,0,0" 
                    Grid.Row="2" 
                    VerticalAlignment="Top" 
                    Height="38" 
                    RenderTransformOrigin="0.477,-0.345" 
                    Click="GraficButton_Click"
                    FontFamily="/Fonts/#Poppins"     
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent"/>
            <Button x:Name="AdvancedStudyButton" 
                    Content="Advanced Study" 
                    Margin="-9,93,0,0" 
                    Grid.Row="2" 
                    VerticalAlignment="Top" 
                    Height="38" 
                    RenderTransformOrigin="0.477,-0.345" 
                    Click="AdvancedStudyButton_Click"                    FontFamily="/Fonts/#Poppins"     
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent"/>

            <Button Content="" 
                    HorizontalAlignment="Left" 
                    Margin="10,8,0,0" 
                    VerticalAlignment="Top" 
                    Height="112" 
                    Width="295"
                    Style="{DynamicResource RoundCorner}"
                    IsEnabled="False" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>
            <Button Content="" 
                    HorizontalAlignment="Left" 
                    Margin="323,8,0,0" 
                    VerticalAlignment="Top" 
                    Height="112" 
                    Width="428"
                    Style="{DynamicResource RoundCorner}"
                    IsEnabled="False" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>


            <Button x:Name="LoadPresitionButton" 
                Content="Select this presition" 
                HorizontalAlignment="Left" 
                Margin="71,75,0,0" 
                Grid.Row="1" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="146" 
                RenderTransformOrigin="0.477,-0.345" 
                    Click="LoadPresitionButton_Click"
                    Foreground="White" 
                    FontFamily="/Fonts/#Poppins"
                    Style="{DynamicResource RoundCorner}" Grid.RowSpan="2"/>

            <Label Content="Select precision"
                   HorizontalAlignment="Left"
                   Margin="27,0,0,0" 
                   Grid.Row="1" 
                   VerticalAlignment="Center" 
                   Width="160" 
                   Grid.Column="1" Height="26"
                   FontFamily="/Fonts/#Poppins"
                   Foreground="White"/>

            <ComboBox x:Name="PresitionComboBox" 
                  HorizontalAlignment="Left" 
                  Margin="164,0,0,0" 
                  Grid.Row="1" 
                  VerticalAlignment="Center" 
                  Width="107" 
                  Height="26" 
                  Grid.Column="1" RenderTransformOrigin="0.5,0.5"
                  Style="{DynamicResource theComboBox}" 
                  ItemContainerStyle="{DynamicResource theComboBoxItem}">
                <ComboBoxItem Content="LOW" 
                                  FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
                <ComboBoxItem Content="MEDIUM"
                                  FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
                <ComboBoxItem Content="HIGH"
                                  FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>

            </ComboBox>


            <Grid x:Name="GridMalla" 
              HorizontalAlignment="Left" 
              Width="601" Margin="31,126,0,0" 
              Height="362" 
              VerticalAlignment="Top" Grid.Column="1" Grid.Row="2"
              />

            <Button x:Name="InfoPresitionButton" Content="I" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                Margin="561,63,0,0" 
                Grid.Row="2"
                VerticalAlignment="Top" 
                RenderTransformOrigin="-0.074,-0.171" 
                Height="24" Width="26"
                Foreground="White" 
                FontFamily="/Fonts/#Poppins"
                Style="{DynamicResource RoundCorner}"
                ToolTipService.ShowDuration="30000">

                <Button.ToolTip>
                    <StackPanel>
                        <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5">Help for running a simulation</TextBlock>
                        <TextBlock>
                        1. Select the precision and press the selection button
                        <LineBreak />
                        2. Define the initial data line and load it
                        <LineBreak />
                        3. Press the simulating button
                        <LineBreak />
                        4. Choose the data that you want to display (in the combobox)
                        <LineBreak />
                        5. If you want to make any change press the RESET button and 
                        define again all the simulation parameters

                        </TextBlock>
                        <Border BorderBrush="Silver" BorderThickness="0,1,0,0" Margin="0,8" />
                        <WrapPanel>
                            <TextBlock FontStyle="Italic">Press back to start and watch the video tutorial for more help</TextBlock>
                        </WrapPanel>
                    </StackPanel>
                </Button.ToolTip>


            </Button>

            <Label Content="ρ:" 
                   Grid.Column="1" 
                   HorizontalAlignment="Left" 
                   Margin="339,82,0,0" 
                   Grid.Row="1" 
                   VerticalAlignment="Top" 
                   RenderTransformOrigin="0.495,1.177" 
                   Height="26" Width="20"
                   FontFamily="/Fonts/#Poppins"
                   Foreground="White" Grid.RowSpan="2"/>
            <Label Content="P:"
                   Grid.Column="1" 
                   HorizontalAlignment="Left" 
                   Margin="460,18,0,0" 
                   Grid.Row="1" 
                   VerticalAlignment="Top" 
                   RenderTransformOrigin="0.168,0.491" Height="26" Width="19"
                   FontFamily="/Fonts/#Poppins"
                   Foreground="White"/>
            <Label Content="M:" 
                   Grid.Column="1" 
                   HorizontalAlignment="Left" 
                   Margin="458,53,0,0" 
                   Grid.Row="1" 
                   VerticalAlignment="Top" 
                   RenderTransformOrigin="-0.426,-0.61" 
                   Height="26" Width="23"
                   FontFamily="/Fonts/#Poppins"
                   Foreground="White"/>
            <Label Content="T:" 
                   Grid.Column="1" 
                   HorizontalAlignment="Left" 
                   Margin="340,46,0,0" 
                   Grid.Row="1" 
                   VerticalAlignment="Top" Height="26" Width="19"
                   FontFamily="/Fonts/#Poppins"
                   Foreground="White"/>
            <Label Content="v:" 
                   Grid.Column="1" 
                   HorizontalAlignment="Left" 
                   Margin="461,86,0,0" 
                   Grid.Row="1" 
                   VerticalAlignment="Top" 
                   RenderTransformOrigin="-0.426,-0.61" Height="26" 
                   Width="20"
                   FontFamily="/Fonts/#Poppins"
                   Foreground="White" Grid.RowSpan="2"/>



            <TextBox x:Name="P_TextBox" Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Margin="495,16,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="62" 
                     Height="30"
                     Style="{StaticResource TextboxINPUT2}"
                     FontFamily="/Fonts/#Poppins"/>


            <TextBox x:Name="M_TextBox" Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Margin="495,50,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="62" Height="30"
                     Style="{StaticResource TextboxINPUT2}"
                     FontFamily="/Fonts/#Poppins"/>

            <TextBox x:Name="Rho_TextBox" Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Margin="373,83,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="62" 
                     Height="30"
                     Style="{StaticResource TextboxINPUT2}"
                     FontFamily="/Fonts/#Poppins" Grid.RowSpan="2"/>

            <TextBox x:Name="v_TextBox" Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Margin="495,84,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="62" Height="30"
                     Style="{StaticResource TextboxINPUT2}"
                     FontFamily="/Fonts/#Poppins" Grid.RowSpan="2"/>

            <TextBox x:Name="T_TextBox" Grid.Column="1" 
                 HorizontalAlignment="Left" 
                 Margin="373,48,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="62" 
                     Height="30"
                     Style="{StaticResource TextboxINPUT2}"
                     FontFamily="/Fonts/#Poppins"/>



            <CheckBox x:Name="CheckBox_A" 
                      Content="Defaul parameters" 
                      Grid.Column="1" 
                      HorizontalAlignment="Left" 
                      Margin="585,36,0,0" 
                      Checked="CheckBox_A_Checked"
                      VerticalAlignment="Top" Height="22" Width="148"
                      FontFamily="/Fonts/#Poppins"
                      Foreground="White" RenderTransformOrigin="0.475,0.608" Grid.Row="1"
                     />





            <Button x:Name="LoadParametersButton" 
                Content="Load Parameters" 
                HorizontalAlignment="Left" 
                Margin="585,69,0,0" 
                Grid.Row="1" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="137" 
                IsEnabled="False"
                RenderTransformOrigin="0.477,-0.345" Click="LoadParametersButton_Click"
                    Foreground="White" 
                    FontFamily="/Fonts/#Poppins"
                    Style="{DynamicResource RoundCorner}" Grid.RowSpan="2"/>

            <Button x:Name="Simulate_Button" 
                IsEnabled="false"
                Content="Star Simulation" 
                HorizontalAlignment="Right" 
                Margin="0,62,625,0" 
                Grid.Row="2" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="120" 
                RenderTransformOrigin="0.477,-0.345" 
                    Click="Simulate_Button_Click"
                    Foreground="White" 
                    FontFamily="/Fonts/#Poppins"
                    Style="{DynamicResource RoundCorner}"/>

            <Button x:Name="SaveSim_button" 
                Content="Save Simulation" 
                HorizontalAlignment="Left" 
                Margin="624,47,0,0" 
                Grid.Row="2" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="118" 
                RenderTransformOrigin="0.477,-0.345"
                    Foreground="White" 
                    FontFamily="/Fonts/#Poppins"
                    Style="{DynamicResource RoundCorner}"/>

            <Button x:Name="LoadSim_button" 
                Content="Load Simulation" 
                HorizontalAlignment="Left" 
                Margin="624,84,0,0" 
                Grid.Row="2" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="118" 
                RenderTransformOrigin="0.477,-0.345"
                    Foreground="White" 
                    FontFamily="/Fonts/#Poppins"
                    Style="{DynamicResource RoundCorner}"/>

            <Button x:Name="Reset_button" 
                Content="Reset" 
                IsEnabled="False"
                HorizontalAlignment="Left" 
                Margin="160,62,0,0" 
                Grid.Row="2" 
                Grid.Column="1"
                VerticalAlignment="Top" 
                Height="28" Width="118" 
                RenderTransformOrigin="0.477,-0.345" 
                    Click="Reset_button_Click"
                    Foreground="White" 
                    FontFamily="/Fonts/#Poppins"
                    Style="{DynamicResource RoundCorner}"/>

            <Button x:Name="Close_Button" 
                Content="x" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                Margin="735,10,0,0" 
                VerticalAlignment="Top" FontSize="55"
                    Click="CloseButton_Click"
                    Style="{DynamicResource closebutton}" Height="16" Width="16"/>

            <Button x:Name="Mini_Button" 
                Content="-" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                Margin="714,10,0,0" 
                VerticalAlignment="Top" Width="16"
                    FontSize="55"
                    Click="MiniButton_Click"
                    Style="{DynamicResource minimizebutton}"
                    Height="16" RenderTransformOrigin="3.613,0.613"/>
            <Label Content="Select data type:" 
                   Grid.Column="1" 
                   HorizontalAlignment="Left" 
                   Margin="298,62,0,0" 
                   Grid.Row="2" 
                   VerticalAlignment="Top" 
                   RenderTransformOrigin="0.495,1.177"
                   Height="26" Width="130"
                   FontFamily="/Fonts/#Poppins"
                   Foreground="White"/>
            <ComboBox x:Name="DataGridComboBox" 
            HorizontalAlignment="Left" 
            Margin="425,59,0,0"
            VerticalAlignment="Top" 
            Width="108"
            IsEnabled="False"   
            SelectionChanged="DataGridComboBox_SelectionChanged"  
                      Grid.Column="1" 
                      Grid.Row="2"
                      Style="{DynamicResource theComboBox}" 
                  ItemContainerStyle="{DynamicResource theComboBoxItem}">

                <ComboBoxItem Content="T: Temperature"
                              FontFamily="/Fonts/#Poppins"
                              Background="AliceBlue"
                              HorizontalAlignment="Left"
                              FontSize="10"
                              Width="120"/>
                <ComboBoxItem Content="u: Horizontal velocity"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Left"
                                  FontSize="10"/>
                <ComboBoxItem Content="v: Vertical velocity"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Left"
                                  FontSize="10"/>
                <ComboBoxItem Content="Rho: Density"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Left"
                                  FontSize="10"/>
                <ComboBoxItem Content="P: Pressure" 
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Left"
                                  FontSize="10"/>
                <ComboBoxItem Content="M: Mach"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Left"
                                  FontSize="10"/>

            </ComboBox>

            <Label Content="T:" 
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Margin="645,145,0,0" 
            Grid.Row="2" 
            VerticalAlignment="Top" RenderTransformOrigin="0.495,1.177" Height="26" Width="30"/>
            <Label Content="M:" 
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Margin="645,187,0,0" 
            Grid.Row="2" 
            VerticalAlignment="Top" RenderTransformOrigin="0.495,1.177" Height="26" Width="30"/>
            <Label Content="P:" 
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Margin="645,236,0,0" 
            Grid.Row="2" 
            VerticalAlignment="Top" RenderTransformOrigin="0.495,1.177" Height="26" Width="30"/>
            <Label Content="Rho:" 
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Margin="645,267,0,0" 
            Grid.Row="2" 
            VerticalAlignment="Top" RenderTransformOrigin="0.495,1.177" Height="26" Width="46"/>
            <Label Content="v:" 
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Margin="646,307,0,0" 
            Grid.Row="2" 
            VerticalAlignment="Top" RenderTransformOrigin="0.495,1.177" Height="26" Width="46"/>
            <Label Content="u:" 
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Margin="647,364,0,0" 
            Grid.Row="2" 
            VerticalAlignment="Top" RenderTransformOrigin="0.495,1.177" Height="26" Width="46"/>
            <Label x:Name="temeprature_label" Content="Label" Grid.Column="1" HorizontalAlignment="Left" Margin="691,145,0,0" Grid.Row="2" VerticalAlignment="Top"/>
            <Label x:Name="mach_label" Content="Label" Grid.Column="1" HorizontalAlignment="Left" Margin="691,187,0,0" Grid.Row="2" VerticalAlignment="Top"/>
            <Label x:Name="p_label" Content="Label" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="693,236,0,0" Grid.Row="2" VerticalAlignment="Top" Width="36"/>
            <Label x:Name="rho_label" Content="Label" Grid.Column="1" HorizontalAlignment="Left" Height="27" Margin="696,280,0,0" Grid.Row="2" VerticalAlignment="Top" Width="33"/>
            <Label x:Name="v_label" Content="Label" Grid.Column="1" HorizontalAlignment="Left" Height="33" Margin="705,320,0,0" Grid.Row="2" VerticalAlignment="Top" Width="24"/>
            <Label x:Name="u_label" Content="Label" Grid.Column="1" HorizontalAlignment="Left" Height="28" Margin="698,377,0,0" Grid.Row="2" VerticalAlignment="Top" Width="43"/>
            <Label Content="Initial Data Line"
                HorizontalAlignment="Right"
                Margin="0,0,270,48" 
                Grid.Row="1" 
                VerticalAlignment="Bottom" 
                Width="160" 
                Grid.Column="1" Height="26"
                FontFamily="/Fonts/#Poppins"
                Foreground="White"/>

        </Grid>
    </Border>
</Window>
