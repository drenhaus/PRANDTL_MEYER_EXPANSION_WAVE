<Window x:Class="WPFapp.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="WelcomeWindow" Height="450" Width="800">
    <Grid Background="#FF2D2D30">

        <Label Content="Welcome to the simulation!" 
               Margin="0,10,0,0" FontSize="50" 
               FontWeight="Thin" 
               Foreground="#FFCC00FF" 
               HorizontalAlignment="Center" Height="101" VerticalAlignment="Top"/>

        <Button x:Name="StarButton" Content="Start" 
                Margin="85,0,0,0" 
                Width="200" 
                Height="50" 
                Foreground="Black" 
                Background="#FFCC00FF" 
                FontSize="30" 
                FontWeight="Bold" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"/>

        <Button x:Name="ExitButton" Content="Exit" 
                Margin="471,205,129,179" 
                Width="200" Height="50" 
                Background="#FFCC00FF" 
                FontWeight="Bold" 
                FontSize="30" 
                Click="Button_Click"/>

        <Button x:Name="TutorialButton" Content="Tuto" 
            Margin="481,337,119,47" 
            Width="200" Height="50" 
            Background="#FFCC00FF" 
            FontWeight="Bold" 
            FontSize="30" 
            Click="Button_Click"/>

        <Button x:Name="CreditosButton" 
            Content="Creditos" 
            Margin="85,312,515,72" 
            Width="200" Height="50" 
            Background="#FFCC00FF" 
            FontWeight="Bold" 
            FontSize="30" 
            Click="Button_Click"/>

    </Grid>
</Window>
