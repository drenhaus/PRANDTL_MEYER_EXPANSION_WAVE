<Window x:Class="WPFapp.AdvancedStudyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="AdvancedStudyWindow" Height="610" Width="900">
    <Grid>
        <Grid x:Name="Advanced_GridMalla" 
              HorizontalAlignment="Left" 
              Width="340" Margin="162,49,0,0" 
              Height="280" 
              VerticalAlignment="Top"
              Background="Black"/>

        <Grid x:Name="Advanced_GridMalla_2" 
            HorizontalAlignment="Left" 
            Width="340" Margin="539,49,0,0" 
            Height="280" 
            VerticalAlignment="Top"
            Background="Black"/>

        <DataGrid x:Name="Advanced_DataGridMalla" 
                  Margin="162,339,400,21" 
                  ItemsSource="{Binding}" 
                    AutoGenerateColumns="True"/>

        <DataGrid x:Name="Advanced_DataGridMalla_2" 
                  Margin="539,339,23,21" 
                  ItemsSource="{Binding}" 
                    AutoGenerateColumns="True"/>
        <Button x:Name="AdvStudyExplication_Button" Content="Explication of A.S" 
                HorizontalAlignment="Left" 
                Margin="22,73,0,0" 
                VerticalAlignment="Top" 
                Height="32" Width="121"/>

        <Button x:Name="Load_AdSt_Button" Content="Load A.S." 
                HorizontalAlignment="Left" 
                Margin="22,138,0,0" 
                VerticalAlignment="Top" 
                Height="32" Width="121"/>

        <Button x:Name="Close_Button" 
                Content="x" 
                HorizontalAlignment="Left" 
                Margin="857,10,0,0" 
                VerticalAlignment="Top" Width="33"/>

        <Button x:Name="Mini_Button" 
                Content="-" 
                HorizontalAlignment="Left" 
                Margin="814,10,0,0" 
                VerticalAlignment="Top" Width="34"/>
        <Label Content="ρ:" 
            HorizontalAlignment="Left" 
            Margin="33,275,0,0" 
            VerticalAlignment="Top" RenderTransformOrigin="0.495,1.177" Height="26" Width="20"/>
        <Label Content="P:" 
            HorizontalAlignment="Left" 
            Margin="34,208,0,0" 
            VerticalAlignment="Top" RenderTransformOrigin="0.168,0.491" Height="26" Width="19"/>
        <Label Content="M:" 
            HorizontalAlignment="Left" 
            Margin="30,316,0,0" 
            VerticalAlignment="Top" RenderTransformOrigin="-0.426,-0.61" Height="26" Width="23"/>
        <Label Content="T:" 
            HorizontalAlignment="Left" 
            Margin="34,236,0,0" 
            VerticalAlignment="Top" Height="26" Width="19"/>
        <Label Content="v:" 
            HorizontalAlignment="Left" 
            Margin="33,358,0,0" 
            VerticalAlignment="Top" 
            RenderTransformOrigin="-0.426,-0.61" Height="26" Width="18"/>
        <TextBox x:Name="P_TextBox" 
            HorizontalAlignment="Left" 
            Margin="67,216,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top"
            Width="62" Height="18"/>
        <TextBox x:Name="M_TextBox" 
            HorizontalAlignment="Left" 
            Margin="67,323,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top"
            Width="62" Height="18"/>
        <TextBox x:Name="Rho_TextBox" 
            HorizontalAlignment="Left" 
            Margin="67,283,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top"
            Width="62" Height="18"/>
        <TextBox x:Name="v_TextBox" 
            HorizontalAlignment="Left" 
            Margin="67,362,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top"
            Width="62" Height="18"/>
        <TextBox x:Name="T_TextBox" 
            HorizontalAlignment="Left" 
            Margin="67,249,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top"
            Width="62" Height="18"/>
        <CheckBox x:Name="CheckBox_A" Content="Defaul parameters" 
            HorizontalAlignment="Left" 
            Margin="16,390,0,0" 
            Checked="CheckBox_A_Checked"
           
            VerticalAlignment="Top" Height="15" Width="136"
                  />
        <Button x:Name="LoadParametersButton" 
            Content="Load Parameters" 
            HorizontalAlignment="Left" 
            Margin="24,428,0,0"
            VerticalAlignment="Top" 
            Height="28" Width="118" 
            RenderTransformOrigin="0.477,-0.345" Click="LoadParametersButton_Click"/>
        <Button x:Name="Simulate_Button" 
            Content="Simulate" 
            HorizontalAlignment="Right" 
            Margin="0,486,757,0"
            VerticalAlignment="Top" 
            Height="28" Width="120" 
            RenderTransformOrigin="0.477,-0.345" Click="Simulate_Button_Click"/>

    </Grid>
</Window>
