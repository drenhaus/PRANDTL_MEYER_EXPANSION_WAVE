<Window x:Class="WPFapp.AdvancedStudyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="AdvancedStudyWindow" Height="813" Width="1320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="280*"/>
            <RowDefinition Height="517*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Advanced_GridMalla_CASO1" 
              HorizontalAlignment="Left" 
              Width="547" Margin="23,20,0,0" 
              Height="336" 
              VerticalAlignment="Top" Grid.RowSpan="2"
              />

        <Grid x:Name="Advanced_GridMalla_2_CASO1" 
            HorizontalAlignment="Left" 
            Width="464" Margin="575,58,0,0" 
            Height="315" 
            VerticalAlignment="Top" Grid.RowSpan="2"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="64*"/>
                <RowDefinition Height="133*"/>
            </Grid.RowDefinitions>
        </Grid>


        <Grid x:Name="Advanced_GridMalla_CASO2" 
            HorizontalAlignment="Left" 
            Width="547" Margin="23,100,0,0" 
            Height="357" 
            VerticalAlignment="Top" Grid.Row="1"
            />

        <Grid x:Name="Advanced_GridMalla_2_CASO2" 
            HorizontalAlignment="Left" 
            Width="464" Margin="575,121,0,0" 
            Height="360" 
            VerticalAlignment="Top" Grid.Row="1"
            />



        <DataGrid x:Name="Advanced_DataGridMalla" 
                  Margin="1082,0,0,504" 
                  ItemsSource="{Binding}" 
                    AutoGenerateColumns="True" Grid.RowSpan="2" HorizontalAlignment="Left" Width="212" Height="220" VerticalAlignment="Bottom"/>

        <DataGrid x:Name="Advanced_DataGridMalla_2" 
                  Margin="0,0,36,196" 
                  ItemsSource="{Binding}" 
                    AutoGenerateColumns="True" RenderTransformOrigin="0.61,-0.682" Grid.Row="1" Height="185" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="192"/>
        <Button x:Name="AdvStudyExplication_Button" Content="Explication of A.S" 
                HorizontalAlignment="Left" 
                Margin="1128,20,0,0" 
                VerticalAlignment="Top" 
                Height="32" Width="120"/>

        <Button x:Name="Close_Button" 
                Content="x" 
                HorizontalAlignment="Left" 
                Margin="857,10,0,0" 
                VerticalAlignment="Top" Width="33"/>

        <Button x:Name="Mini_Button" 
                Content="-" 
                HorizontalAlignment="Left" 
                Margin="814,10,0,0" 
                VerticalAlignment="Top" Width="34"/>
        <Button x:Name="Simulate_Button" 
            Content="Simulate" 
            Margin="1128,100,72,0"
            VerticalAlignment="Top" 
            Height="28" 
            RenderTransformOrigin="0.477,-0.345" Grid.Row="1"/>
        <ComboBox x:Name="DataGridComboBox_AS" 
                    HorizontalAlignment="Left" 
                    Margin="1149,395,0,0"
                    VerticalAlignment="Top" 
                    Width="120"                     
            SelectionChanged="DataGridComboBox_AS_SelectionChanged"
                      Style="{DynamicResource theComboBox}" 
                  ItemContainerStyle="{DynamicResource theComboBoxItem}" Grid.Row="1">

            <ComboBoxItem Content="T"
                              FontFamily="/Fonts/#Poppins"
                              Background="AliceBlue"
                              HorizontalAlignment="Center"
                              FontSize="10"
                              Width="120"/>
            <ComboBoxItem Content="u"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="v"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="Rho"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="P" 
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="Mach"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>

        </ComboBox>

    </Grid>
</Window>
