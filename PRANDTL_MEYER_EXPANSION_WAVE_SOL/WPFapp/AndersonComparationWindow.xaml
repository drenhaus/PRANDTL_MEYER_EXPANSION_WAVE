<Window x:Class="WPFapp.AndersonComparationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="AndersonComparationWindow" Height="610" Width="860">
    <Grid>
        <Grid x:Name="AndersonGrid" 
            
              RenderTransformOrigin="0.5,0.5" 
              Margin="213,97,510,10">

        </Grid>

        <Grid x:Name="SimulationGrid" 
              Background="Black" 
              RenderTransformOrigin="0.5,0.5" 
              Margin="430,97,293,10">

        </Grid>
        <Label Content="Compare the:" 
               HorizontalAlignment="Left" 
               Margin="43,44,0,0" 
               VerticalAlignment="Top" Width="101"/>


        <ComboBox x:Name="Setect_Parameter_ComboBox" 
                  HorizontalAlignment="Left" 
                  Margin="43,81,0,0"
                  VerticalAlignment="Top" 
                  Width="120">

            <ComboBoxItem Content="T"/>
            <ComboBoxItem Content="u"/>
            <ComboBoxItem Content="v"/>
            <ComboBoxItem Content="Rho"/>
            <ComboBoxItem Content="P" />
            <ComboBoxItem Content="Mach"/>
            <ComboBoxItem Content="F1"/>
            <ComboBoxItem Content="F2"/>
            <ComboBoxItem Content="F3"/>
            <ComboBoxItem Content="F4"/>
        </ComboBox>

        <Label Content="Select position:" 
               HorizontalAlignment="Left" 
               Margin="43,133,0,0" 
               VerticalAlignment="Top" Width="101"/>

        <ComboBox x:Name="Setect_X_ComboBox" 
                  HorizontalAlignment="Left" 
                  Margin="43,164,0,0"
                  VerticalAlignment="Top" 
                  Width="120">

            <ComboBoxItem Content="X = 12.928 m"/>
            <ComboBoxItem Content="X = 66.278 m"/>


        </ComboBox>

        <Label Content="Anderson Table" 
               HorizontalAlignment="Left" 
               Margin="213,48,0,0" 
               VerticalAlignment="Top"/>

        <Label Content="Our Simulation Table" 
               HorizontalAlignment="Left" 
               Margin="430,52,0,0" 
               VerticalAlignment="Top"/>
        <TextBox x:Name="Rel_error_TextBox" HorizontalAlignment="Left" 
                 Margin="650,141,0,0" 
                 Text="Rel_error_TextBox" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120"/>
        <TextBox x:Name="Abs_error_TextBox" HorizontalAlignment="Left" 
                 Margin="649,211,0,0" 
                 Text="Abs_error_TextBox" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120"/>
        <Label Content="Relative Error" 
               HorizontalAlignment="Left" 
               Margin="668,110,0,0" 
               VerticalAlignment="Top" Width="82"/>

        <Label Content="Absolute Error" 
               HorizontalAlignment="Left" 
               Margin="658,180,0,0" 
               VerticalAlignment="Top" Width="112"/>


        <Label Content="Selected Relative Error" 
               HorizontalAlignment="Left" 
               Margin="658,297,0,0" 
               VerticalAlignment="Top" Width="135"/>

        <TextBox x:Name="Rel_error_SELECTED_TextBox" HorizontalAlignment="Left" 
                 Margin="650,341,0,0" 
                 Text="Rel_error_SELECTED_TextBox" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="130"/>


        <Label Content="Selected Absolute Error" 
               HorizontalAlignment="Left" 
               Margin="658,406,0,0" 
               VerticalAlignment="Top" 
               Width="135" 
               RenderTransformOrigin="0.409,1.32"/>

        <TextBox x:Name="Abs_error_SELECTED_TextBox" HorizontalAlignment="Left" 
                 Margin="650,437,0,0" 
                 Text="Abs_error_SELECTED_TextBox" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="130"/>


        <Button x:Name="Close_Button" 
                Content="x" 
                HorizontalAlignment="Left" 
                Margin="804,10,0,0" 
                VerticalAlignment="Top" Width="33"/>

        <Button x:Name="Mini_Button" 
                Content="-" 
                Margin="759,10,67,0" 
                VerticalAlignment="Top"/>
        <Button x:Name="Compare_btn" Content="Compare" HorizontalAlignment="Left" Margin="74,254,0,0" VerticalAlignment="Top" Click="Compare_btn_Click"/>








    </Grid>
</Window>
