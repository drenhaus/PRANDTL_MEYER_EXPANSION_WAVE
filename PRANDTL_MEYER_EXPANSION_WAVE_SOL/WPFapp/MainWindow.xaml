<Window x:Class="WPFapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grid1" Loaded="Loaded">
        <Grid Background="#FF2D2D30" Margin="0,0,-60,-248">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="57*"/>
                <ColumnDefinition Width="29*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Simulation Window" Margin="242,10,0,0" FontSize="30" FontWeight="Bold" Foreground="#FFCC00FF" HorizontalAlignment="Left" Grid.ColumnSpan="2" Height="62" VerticalAlignment="Top" Width="374"/>
