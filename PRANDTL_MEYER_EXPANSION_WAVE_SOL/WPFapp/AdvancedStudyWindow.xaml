<Window x:Class="WPFapp.AdvancedStudyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFapp"
        mc:Ignorable="d"
        Title="AdvancedStudyWindow" Height="610" Width="900">
    <Grid>
        <Grid x:Name="Advanced_GridMalla_CASO1" 
              HorizontalAlignment="Left" 
              Width="411" Margin="162,49,0,0" 
              Height="289" 
              VerticalAlignment="Top"
              />

        <Grid x:Name="Advanced_GridMalla_2_CASO1" 
            HorizontalAlignment="Left" 
            Width="197" Margin="420,154,0,0" 
            Height="197" 
            VerticalAlignment="Top"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="64*"/>
                <RowDefinition Height="133*"/>
            </Grid.RowDefinitions>
        </Grid>


        <Grid x:Name="Advanced_GridMalla_CASO2" 
            HorizontalAlignment="Left" 
            Width="197" Margin="162,316,0,0" 
            Height="200" 
            VerticalAlignment="Top"
            />

        <Grid x:Name="Advanced_GridMalla_2_CASO2" 
            HorizontalAlignment="Left" 
            Width="197" Margin="359,356,0,0" 
            Height="200" 
            VerticalAlignment="Top"
            />



        <DataGrid x:Name="Advanced_DataGridMalla" 
                  Margin="617,63,10,297" 
                  ItemsSource="{Binding}" 
                    AutoGenerateColumns="True"/>

        <DataGrid x:Name="Advanced_DataGridMalla_2" 
                  Margin="617,339,10,21" 
                  ItemsSource="{Binding}" 
                    AutoGenerateColumns="True" RenderTransformOrigin="0.61,-0.682"/>
        <Button x:Name="AdvStudyExplication_Button" Content="Explication of A.S" 
                HorizontalAlignment="Left" 
                Margin="22,73,0,0" 
                VerticalAlignment="Top" 
                Height="32" Width="121"/>

        <Button x:Name="Close_Button" 
                Content="x" 
                HorizontalAlignment="Left" 
                Margin="857,10,0,0" 
                VerticalAlignment="Top" Width="33"/>

        <Button x:Name="Mini_Button" 
                Content="-" 
                HorizontalAlignment="Left" 
                Margin="814,10,0,0" 
                VerticalAlignment="Top" Width="34"/>
        <Button x:Name="Simulate_Button" 
            Content="Simulate" 
            HorizontalAlignment="Right" 
            Margin="0,397,757,0"
            VerticalAlignment="Top" 
            Height="28" Width="120" 
            RenderTransformOrigin="0.477,-0.345"/>
        <ComboBox x:Name="DataGridComboBox_AS" 
                    HorizontalAlignment="Left" 
                    Margin="23,321,0,0"
                    VerticalAlignment="Top" 
                    Width="120"                     
            SelectionChanged="DataGridComboBox_AS_SelectionChanged"
                      Style="{DynamicResource theComboBox}" 
                  ItemContainerStyle="{DynamicResource theComboBoxItem}">

            <ComboBoxItem Content="T"
                              FontFamily="/Fonts/#Poppins"
                              Background="AliceBlue"
                              HorizontalAlignment="Center"
                              FontSize="10"
                              Width="120"/>
            <ComboBoxItem Content="u"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="v"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="Rho"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="P" 
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>
            <ComboBoxItem Content="Mach"
                              FontFamily="/Fonts/#Poppins"
                                  Background="AliceBlue"
                                  HorizontalAlignment="Center"
                                  FontSize="10"/>

        </ComboBox>

    </Grid>
</Window>
